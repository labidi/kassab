{% extends '::dashboard/base.html.twig' %}

{% block body -%}
     <div class="row">
        <div class="col-md-12">
            <table class="table table-hover">
                <tr>
                    <th>Id</th>
                    <th>Nom</th>
                    <th>Prenom</th>
                    <th>Age</th>
                    <th>Num_dossier</th>
                    <th>Actions</th>
                </tr>
                <tbody>
                {% for entity in entities %}
                    <tr>
                        <td><a href="{{ path('app_patient_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                        <td>{{ entity.nom }}</td>
                        <td>{{ entity.prenom }}</td>
                        <td>{{ entity.age }}</td>
                        <td>{{ entity.numdossier }}</td>
                        <td>
                        <ul>
                            <li>
                                <a href="{{ path('app_patient_show', { 'id': entity.id }) }}">show</a>
                            </li>
                            <li>
                                <a href="{{ path('app_patient_edit', { 'id': entity.id }) }}">edit</a>
                            </li>
                        </ul>
                        </td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>
    </div>

        <ul>
        <li>
            <a href="{{ path('app_patient_new') }}">
                Create a new entry
            </a>
        </li>
    </ul>
    {% endblock %}
