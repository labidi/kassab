{% extends '::dashboard/base.html.twig' %}

{% block title -%}Profile{% endblock %}

{% block stylesheets %} 
    {{parent()}}
    <link rel="stylesheet" type="text/css" href="{{ asset('assets/admin/pages/css/profile.css') }}"/>
{% endblock %}

{% block breadcrumb -%}
<div class="page-bar">
    <ul class="page-breadcrumb">
        <li>
            <i class="fa fa-home"></i>
            <a href="{{path('app_dashboard_index')}}">tableau de bord</a>
            <i class="fa fa-angle-right"></i>
        </li>
        <li>
            <a href="{{ path('app_user_profile') }}">profil</a>
        </li>
    </ul>
</div>
{% endblock %}

{% block body %}

<div class="row">

    <div class="col-md-12">
        
        <div id="personal-infos" class="tab-pane active">
            {{ form_start(form,{'attr':{'class':'form-horizontal'}}) }}
                <div class="form-body">
                    <h4 class="form-section">Informations personnelles</h4>
                    <hr>
                    <div class="row">
                    	{% if form.firstName is defined %}
                        <div class="col-md-12">
                            <div class="form-group {% if form.firstName.vars.errors|length %} has-error {% endif %}">
                                {{ form_label(form.firstName,null,{'label_attr':{'class':'col-md-3 control-label'}}) }}
                                <div class="col-md-9">
                                    {{ form_widget(form.firstName,{'attr':{'class':'form-control'}}) }}
                                    {{ form_errors(form.firstName) }}
                                </div>
                            </div>
                        </div>
                        {% endif %}
                        {% if form.lastName is defined %}
                        <div class="col-md-12">
                            <div class="form-group {% if form.lastName.vars.errors|length %} has-error {% endif %}">
                                {{ form_label(form.lastName,null,{'label_attr':{'class':'col-md-3 control-label'}}) }}
                                <div class="col-md-9">
                                    {{ form_widget(form.lastName,{'attr':{'class':'form-control'}}) }}
                                    {{ form_errors(form.lastName) }}
                                </div>
                            </div>
                        </div>
                         {% endif %}
                        <div class="col-md-12">
                            <div class="form-group {% if form.email.vars.errors|length %} has-error {% endif %}">
                                {{ form_label(form.email,null,{'label_attr':{'class':'col-md-3 control-label'}}) }}
                                <div class="col-md-9">
                                    {{ form_widget(form.email,{'attr':{'class':'form-control'}}) }}
                                    {{ form_errors(form.email) }}
                                </div>
                            </div>
                        </div>
                     	{% if form.phone is defined %}
                        <div class="col-md-12">
                            <div class="form-group {% if form.phone.vars.errors|length %} has-error {% endif %}">
                                {{ form_label(form.phone,null,{'label_attr':{'class':'col-md-3 control-label'}}) }}
                                <div class="col-md-9">
                                    {{ form_widget(form.phone,{'attr':{'class':'form-control'}}) }}
                                    {{ form_errors(form.phone) }}
                                </div>
                            </div>
                        </div>
                        {% endif %}
                    </div>
                    {% if form.city is defined %}
                    <h4 class="form-section">Adresse</h4>
                    <hr>
                    <div class="row">
                    	 <div class="col-md-12">
                            <div class="form-group {% if form.city.vars.errors|length %} has-error {% endif %}">
                                {{ form_label(form.city,null,{'label_attr':{'class':'col-md-3 control-label'}}) }}
                                <div class="col-md-9">
                                    {{ form_widget(form.city,{'attr':{'class':'form-control'}}) }}
                                    {{ form_errors(form.city) }}
                                </div>
                            </div>
                        </div>
                        <div class="col-md-12">
                            <div class="form-group {% if form.address.vars.errors|length %} has-error {% endif %}">
                                {{ form_label(form.address,null,{'label_attr':{'class':'col-md-3 control-label'}}) }}
                                <div class="col-md-9">
                                    {{ form_widget(form.address,{'attr':{'class':'form-control'}}) }}
                                    {{ form_errors(form.address) }}
                                </div>
                            </div>
                        </div>
                       
                        <div class="col-md-12">
                            <div class="form-group {% if form.codePostal.vars.errors|length %} has-error {% endif %}">
                                {{ form_label(form.codePostal,null,{'label_attr':{'class':'col-md-3 control-label'}}) }}
                                <div class="col-md-9">
                                    {{ form_widget(form.codePostal,{'attr':{'class':'form-control'}}) }}
                                    {{ form_errors(form.codePostal) }}
                                </div>
                            </div>
                        </div> 
                </div>
                {% endif %}
                <div class="form-actions">
                    <div class="row">
                        <div class="col-md-12">
                            <div class="row">
                                <div class="col-md-offset-3 col-md-9">
                                    {{ form_row(form.submit, { 'label': 'Mettre Ã  jour','attr':{'class':'btn green'}}) }}
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            {{ form_end(form) }}
        </div>
        <div id="password-change" class="tab-pane">
            <h4 class="form-section">Mot de passe</h4>
            <hr>
            {% include "FOSUserBundle:ChangePassword:changePassword_content.html.twig" %}
        </div>
    </div>


</div>
{% endblock %}