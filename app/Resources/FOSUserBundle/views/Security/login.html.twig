{% extends "FOSUserBundle::layout.html.twig" %}

{% trans_default_domain 'FOSUserBundle' %}

{% block body %}
	
{% block fos_user_content %}
<div class="content">
{% if error %}
   {{ error.messageKey|trans(error.messageData, 'security') }}
{% endif %}

	<form class="login-form" action="{{ path("fos_user_security_check") }}" method="post">
		<h3 class="form-title">Se connecter</h3>

	    <input type="hidden" name="_csrf_token" value="{{ csrf_token }}" />

		<div class="form-group">
			<label class="control-label visible-ie8 visible-ie9" for="username" >{{ 'security.login.email'|trans }}</label>
			<div class="input-icon">
				<i class="fa fa-user"></i>
				<input class="form-control placeholder-no-fix" type="text" autocomplete="off" placeholder="{{ 'security.login.email'|trans }}" id="username" name="_username"  required="required" value="{{ last_username }}" />
			</div>
		</div>

		<div class="form-group">
			<label class="control-label visible-ie8 visible-ie9" for="password">{{ 'security.login.password'|trans }}</label>
			<div class="input-icon">
				<i class="fa fa-lock"></i>
				<input class="form-control placeholder-no-fix" type="password" autocomplete="off" placeholder="{{ 'security.login.password'|trans }}" id="password" name="_password"  required="required" />
			</div>
		</div>

		<div class="form-group">
			<label>
				<input type="checkbox" id="remember_me" name="_remember_me" value="1"/> {{ 'security.login.remember_me'|trans }} 
			</label>
		</div>

		<div class="alert alert-danger display-hide">
			<button class="close" data-close="alert"></button>
			<span>
			Enter any username and password. </span>
		</div>


		<div class="form-group">
			<div class="row">
				<div class="col-md-12">
					<button type="submit" id="_submit"  name="_submit" class="btn green pull-right" >
					{{ 'security.login.submit'|trans }} <i class="m-icon-swapright m-icon-white"></i>
					</button>
				</div>
			</div>
		</div>

	    
	</form>
</div>
{% endblock fos_user_content %}


{% endblock %}